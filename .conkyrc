out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

update_interval 1.0
total_run_times 0

short_units yes
if_up_strictness address
use_spacer left
override_utf8_locale yes
cpu_avg_samples 2

TEXT
[

# Volume
  {
${if_match "${exec amixer -D pulse get Master | grep -o '\[on\]' | head -n1}" == "[on]"}
    "full_text": "   ${exec amixer -D pulse get Master | grep -o '\[.*%\]' | grep -o '[0-9]*%' | head -n1}  ",
    "color": "\#FFFFFF"
${else}
    "full_text": "   muted  ",
    "color": "\#B33A3A"
${endif}
  }

# Battery
  ,{
    "full_text": "   ${battery_percent}%  ",
    "color": "${if_match ${battery_percent} <= 20}\#B33A3A${else}\#FFFFFF${endif}"
  }

# Wifi
${if_up wlan0}
  ,{
    "full_text": "   ${wireless_bitrate wlan0}  ${wireless_essid wlan0}  ",
    "color": "\#FFFFFF"
  }
${endif}

# Ethernet
${if_up eth0}
  ,{
    "full_text": "   ${downspeed eth0}  ${addr eth0}  ",
    "color": "\#FFFFFF"
  }
${endif}

# Date
  ,{
    "full_text": "   ${time %a, %d. %B}  ",
    "color": "\#FFFFFF"
  }

# Time
  ,{
    "full_text": "   ${time %H:%M:%S}  ",
    "color": "\#FFFFFF"
  }
],
