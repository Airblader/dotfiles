out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

update_interval 1.0
total_run_times 0

short_units yes
if_up_strictness address
use_spacer left
override_utf8_locale yes
cpu_avg_samples 2

TEXT
[

# Volume
  {
${if_match "${exec amixer get Master | grep -o '\[on\]' | head -n1}" == "[on]"}
    "full_text": " ${exec amixer get Master | grep -o '\[.*%\]' | head -n1} ",
    "color": "\#BBCCBB"
${else}
    "full_text": " [muted] ",
    "color": "\#B33A3A"
${endif}
  }

# Battery
  ,{
    "full_text": " [${battery_percent}%] ",
    "color": "${if_match ${battery_percent} <= 20}\#B33A3A${else}\#BBCCBB${endif}"
  }

# Wifi
${if_up wlan0}
  ,{
    "full_text": " [${wireless_bitrate wlan0}] ${wireless_essid wlan0} ",
    "color": "\#BBCCBB"
  }
${endif}

# Ethernet
${if_up eth0}
  ,{
    "full_text": " [${downspeed eth0}] ${addr eth0} ",
    "color": "\#BBCCBB"
  }
${endif}

# Calendar
  ,{
    "full_text": " [${time %a %d %b} ${time %H:%M:%S}] ",
    "color": "\#FFFFFF"
  }
],
